      <!-- Línea divisoria -->
      <div class="w-full max-w-md h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
      
      <!-- Copyright minimalista -->
      <div class="text-center">
        <p class="text-white/40 text-xs tracking-wider">
          © 2026 — Diseñado con pasión
        </p>
      </div>
      
    </div>
  </div>
  
  <!-- Efecto de partículas decorativas (opcional) -->
  <div class="absolute bottom-0 left-1/4 w-2 h-2 bg-white/10 rounded-full animate-pulse"></div>
  <div class="absolute top-1/2 right-1/4 w-1 h-1 bg-white/20 rounded-full animate-pulse delay-75"></div>
  <div class="absolute bottom-1/3 right-1/3 w-1.5 h-1.5 bg-white/10 rounded-full animate-pulse delay-150"></div>
</footer>

<style>
  /* Animación de pulse con delays */
  @keyframes pulse {
    0%, 100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }
  
  .animate-pulse {
    animation: pulse 3s ease-in-out infinite;
  }
  
  .delay-75 {
    animation-delay: 0.75s;
  }
  
  .delay-150 {
    animation-delay: 1.5s;
  }
  
  /* Efecto hover en los botones */
  footer a {
    position: relative;
    overflow: hidden;
  }
  
  footer a::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }
  
  footer a:hover::before {
    width: 300px;
    height: 300px;
  }
</style>